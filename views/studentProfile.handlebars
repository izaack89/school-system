<div class="container">



    <div class="row mt-4">
        <div class="col-md-6">
            <h3>Add a new subject:</h3>

            <form class="form new-subject-form">
                <div class="form-group">
                    <label for="subject-name">subject name:</label>
                    <input class="form-input" type="text" id="subject-name" name="subject-name" />
                </div>
                <div class="form-group">
                    <button type="submit" class="btn btn-primary">Add</button>
                </div>
            </form>
        </div>

        {{#if subjects.length}}
            <div class="row accordion" id="accordionExample">
                <div class="row">
                    {{#each subjects as |subject|}}
                        <div class="col-lg-4">
                            <h2>Welcome, {{subject.first_name}} {{subject.last_name}}!</h2>
                            <div class="card">
                                <div class="card-header" id="heading-4">
                                    <h2 class="mb-0">
                                        <button class="btn btn-link btn-block text-left collapsed" type="button"
                                            data-toggle="collapse" data-target="#collapse-4" aria-expanded="false"
                                            aria-controls="collapse-4">
                                            {{title}}
                                        </button>
                                    </h2>
                                </div>
                                <div id="collapse-4" class="collapse" aria-labelledby="heading-4"
                                    data-parent="#accordionExample">
                                    <div class="card-body">
                                        <ul class="list-group">
                                            <li class="list-group-item">Professor</li>
                                            <li class="list-group-item">Grade</li>
                                        </ul>
                                    </div>
                                </div>
                            </div>
                        </div><!-- /.col-lg-4 -->

                    {{/each}}

                </div>
            </div><!-- /.row -->
        {{/if}}
    </div>

    <script src="/js/studentsubject.js"></script>